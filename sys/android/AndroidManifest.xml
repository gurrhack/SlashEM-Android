<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.tbd.slex"
	android:versionCode="2370"
	android:versionName="2.3.7"
	android:installLocation="auto">
	<uses-sdk android:minSdkVersion="7"
	          android:targetSdkVersion="15"/>
	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:label="Slash'EM Extended"
		android:icon="@drawable/icon"
		android:theme="@android:style/Theme"
		android:allowBackup="true">
<!--		android:largeHeap="true" -->
		<activity
			android:name="com.tbd.forkfront.ForkFront"
			android:label="Slash'EM Extended"
			android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
			android:launchMode="singleTask"
			android:configChanges="mcc|mnc|locale|keyboard|keyboardHidden|orientation|screenSize|smallestScreenSize|screenLayout|fontScale">
			<!-- Prevent activity from restarting when configuration changes -->
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN"/>
				<category
					android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name="com.tbd.forkfront.Settings"
			android:label="Slash'EM Extended Settings">
		</activity>
	</application>
</manifest>
